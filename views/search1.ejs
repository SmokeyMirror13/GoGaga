<%- include('includes/head.ejs') %>
</head>

<body>
    <%- include('includes/navigation.ejs') %>
    <main>
        <form  method="POST">
        <div class="col-md-6">
            <h2>Search By Name</h2>
                <input name="name" placeholder="Enter Name" id="name" class="typeahead" type="text" />
        </div>
        <div class="col-md-6">
            <h2>Search By State</h2>
                <input name="location" placeholder="Enter State" id="location" class="typeahead" type="text" />
            </div>
            <div class="col-md-12">
            <center>
            <button class="button" type="submit">Submit</button>
        </center>
    </div>
        </form>
        <% if(profiles) { %>
        <table class="main_table"> 
            <tbody>
                <tr><h2>Profiles</h2></tr>  
                <tr>
                <th class="col-xs-6 col-md-6"><strong>Name</strong></th>
                <th class="col-xs-6 col-md-6"><strong>State</strong></th>
            </tr>
                <tr>
                    <td class="col-xs-6 col-md-6"><%= profiles["name"] %></td>
                    <td class="col-xs-6 col-md-6"><%= profiles["location"] %></td>
                </tr>
            </tbody>
        </table>
        <% } %>
    </main>
    
    <%- include('includes/end.ejs') %>